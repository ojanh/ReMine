<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ojan_.remine.user_mainmenu.MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mau Service Apa ??"
        android:textColor="#9A9A9A"
        android:textSize="12pt"
        android:fontFamily="light"
        android:id="@+id/MainMenu_welcome_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--Radioo-->
    <!--Radio service icon button -->

    <!--tulisan radio service -->

    <!--tv -->
    <!--tv service icon button -->
    <ImageButton
        android:layout_width="30pt"
        android:layout_height="25pt"
        android:layout_below="@+id/umenu_laptop_button"
        android:layout_marginTop="12pt"
        android:layout_marginLeft="30pt"
        android:background="@drawable/printer"
        android:id="@+id/usermenu_im_printer" />

    <!--tulisan tv service -->

    <!--Komputer -->
    <!--Komputer service icon button -->
    <ImageButton
        android:layout_width="30pt"
        android:layout_height="25pt"
        android:layout_below="@+id/usermenu_im_printer"
        android:layout_marginTop="12pt"
        android:layout_marginLeft="28pt"
        android:background="@drawable/komputer_icon"
        android:id="@+id/uname_im_komputer" />

    <!--tulisan komputer service -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Komputer"
        android:textSize="15pt"
        android:id="@+id/text_servicekomputer"
        android:layout_marginBottom="6dp"
        android:layout_alignBottom="@+id/uname_im_komputer"
        android:layout_toEndOf="@+id/uname_im_komputer"
        android:layout_marginStart="30dp"/>

    <!--Kulkas-->
    <!--Icon Kulkas Service-->
    <ImageButton
        android:layout_width="25pt"
        android:layout_height="36pt"
        android:layout_below="@+id/uname_im_komputer"
        android:layout_marginTop="12pt"
        android:layout_marginLeft="30pt"
        android:id="@+id/usermenu_image_kulkasIcon"
        android:background="@drawable/hape"
        android:onClick=""/>

   <!-- Text Kulkas-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Printer"
        android:textSize="15pt"
        android:id="@+id/text_serviceTV"
        android:layout_above="@+id/uname_im_komputer"
        android:layout_alignEnd="@+id/text_serviceRadio"
        android:layout_marginEnd="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Handphone"
        android:textSize="15pt"
        android:id="@+id/username_text_kulkas"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="9dp"
        android:layout_alignBottom="@+id/usermenu_image_kulkasIcon"
        android:layout_toEndOf="@+id/usermenu_image_kulkasIcon"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:layout_width="38pt"
        android:layout_height="25pt"
        android:background="@drawable/lappie"
        android:id="@+id/umenu_laptop_button"
        android:layout_marginTop="23dp"
        android:layout_alignEnd="@+id/usermenu_im_printer"
        android:layout_below="@+id/MainMenu_welcome_text"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Laptop"
        android:textSize="15pt"
        android:id="@+id/text_serviceRadio"
        android:layout_alignBottom="@+id/umenu_laptop_button"
        android:layout_alignStart="@+id/text_servicekomputer" />


</RelativeLayout>
