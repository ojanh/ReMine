<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alasan_konfirmasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ojan_.remine.user_mainmenu.alasan_konfirmasi">

    <TextView
        android:text="Nama Toko"
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:id="@+id/alasanReparasi_text_namaToko"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="10pt"/>

    <TextView
        android:text="alamat toko"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/alasanReparasi_text_alamatToko"
        android:layout_below="@+id/alasanReparasi_text_namaToko"
        android:layout_centerHorizontal="true"
        android:textColor="#929292"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/alasanReparasi_listView_alasanReparasi"
        android:layout_below="@+id/alasanReparasi_text_alamatToko"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="ada alasan lain, tulis disini"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:id="@+id/alasanReparasi_editText_alasanLain" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alasanReparasi_text_totalHarga"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/alasanReparasi_editText_alasanLain"
        android:layout_alignEnd="@+id/alasanReparasi_button_konfirmasi"
        android:layout_marginEnd="64dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="43dp"
        android:text="konfirmasi"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:id="@+id/alasanReparasi_button_konfirmasi"
        android:onClick="konfirmasi"
        android:layout_below="@+id/alasanReparasi_editText_alasanLain"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
